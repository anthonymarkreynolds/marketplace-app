<%= form_with(model: challenge) do |form| %>
  <% if challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
        <% challenge.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <h5>Difficulty</h5> 
    <% for (difficulty,_) in Challenge.difficulties do %>
      <%= form.label :difficulty, difficulty.capitalize %>
      <%= form.radio_button :difficulty, difficulty %>
    <%end%>
  </div>


  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :solution %>
    <%= form.text_field :solution %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
