<p id="notice"><%= notice %></p>

<h1>Challenges</h1>

<% if user_signed_in? %>
  <%= link_to 'Create New Challenge', new_challenge_path, class: "button" %>
<%end%>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title ▼▲', :sort => "title" %> </th>
      <th><%= link_to 'Author ▼▲', :sort => "user" %> </th>
      <th><%= link_to 'Difficulty ▼▲', :sort => "difficulty" %> </th>
      <th><%= link_to 'Submissions ▼▲', :sort => "submissions" %> </th>
      <th><%= link_to 'Votes ▼▲', :sort => "votes" %></th>
      <th>Author ▼▲</th>
      <th>Difficulty ▼▲</th>
      <th>Submissions ▼▲</th>
      <th>Votes ▼▲</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.title %></td>
        <td><%=link_to challenge.user.username, "/users/#{challenge.user.username}" %></td>
        <td><%= challenge.difficulty %></td>
        <td><%= challenge.submissions.length %></td>
        <td><%= challenge.votes %></td>
        <td><%= link_to 'View', challenge %></td>
        <% if user_signed_in? && (challenge.user == current_user) %>
          <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
          <td><%= link_to 'Destroy', challenge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

